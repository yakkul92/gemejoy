<div class='container'>
  <div class='row'>
    <div class="col-md-6 px-0 mx-auto mt-4">
      <h4 class="mb-0">キーワードタグ一覧・追加</h4>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-6 bg-white mt-4 mx-auto rounded-lg">

      <%= form_with model: @tag, url: tags_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :"キーワード", class: "" %>
          <%= f.text_field :name, include_blank: "キーワードは必須です。", class: "form-control", required: :true %>
        </div>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      <% end %>

      <table class = "table table-hover table-inverse col-md-11 m-3">
        <thead>
          <tr class="table-active">
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
           <tr>
             <td><%= tag.name %></td>
             <td><%= link_to "編集する", edit_tag_path(tag.id), class: "btn btn-primary" %></td>
           </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>