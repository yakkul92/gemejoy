<div class='container'>
  <div class='row'>
    <div class="col-md-6 px-0 mx-auto mt-4">
      <h4 class="mb-0">ジャンル一覧・追加</h4>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-6 bg-white mt-4 mx-auto rounded-lg">

      <%= form_with model: @genre, url: genres_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :id, class: "" %>
          <%= f.text_field :id, include_blank: "ジャンル名は必須です。", class: "form-control", required: :true %>
        </div>
      
        <div class="form-group">
          <%= f.label :name, class: "" %>
          <%= f.text_field :name, include_blank: "ジャンル名は必須です。", class: "form-control", required: :true %>
        </div>
      
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success m-3" %>
        </div>
      <% end %>


      <table class = "table table-hover table-inverse col-md-11 m-3">
        <thead>
          <tr class="table-active">
            <th>ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
           <tr>
             <td><%= genre.id %></td>
             <td><%= genre.name %></td>
             <td><%= link_to "編集する", edit_genre_path(genre.id), class: "btn btn-primary" %></td>
           </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>