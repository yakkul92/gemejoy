<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <div class="box col-md-5 mb-4">
        <div class="box-inner">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>            
              <h4>ログイン</h4>
              <div class="box-email">
                <%= f.label :email, "Eメール" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="actions">
                <%= f.submit "パスワードの再設定" %>
              </div>
            <% end %>  

           <div class="mt-3">
             <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-primary btn-sm btn-block sign_in", method: :post %>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>
