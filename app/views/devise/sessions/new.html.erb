<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <div class="box col-md-5 mb-4">
        <div class="box-inner">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h4>ログイン</h4>
            <div class="box-email">
              <%= f.label :email, "Eメール" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="box-password">
              <div class="a-row">
                <div class="column-left">
                  <%= f.label :password, "パスワード" %>
                </div>
                <div class="column-right">
                  <%= link_to "パスワードを忘れた場合", new_user_password_path %>
                </div>
              </div>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <div class="box-login">
              <%= f.submit "ログイン" %>

              <% if devise_mapping.rememberable? %>
                <div class="remember">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember, "ログインしたままにする" %>
                </div>
              <% end %>
            </div>
          <% end %>

          <div class="box-newusr mb-4">
            <p><span>-----</span> GAMEJOYの新しいお客様ですか？ <span>-----</span></p>
            <%= link_to "GAMEJOYアカウントを作成", new_user_registration_path %>
          </div>
           <div class="mt-3">
             <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-primary btn-sm btn-block sign_in", method: :post %>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>
