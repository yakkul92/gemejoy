<div class="container">
  <div class="row">
  
    <div class="col-3">
      <%= render 'items/search_genre' %>
    </div>
    
    <div class="col-9 mt-4">
      <h4>製品名を入力して検索</h4>
      <%= form_with url: search_items_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: params[:keyword] %>
          <%= f.submit '製品名を検索', class: "btn btn-success" %>
      <% end %>
      
      <% if @items.present? %>
        <%= render 'items/item', items: @item %>
      <% end %>
      
    </div>
  </div>
</div>

