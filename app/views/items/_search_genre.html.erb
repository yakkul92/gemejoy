<div class="container mt-4">
  <div class="row">
    <div class="col">
      
      ジャンル検索
      <%= form_tag search_items_path, method: :get do %>
        <table class="table">
          <tbody>
            <% Genre.all.each do |genre| %>
              <tr>
                <td>
                  <%= check_box_tag "genre_ids[]", genre.id, params[:genre_ids].present? ? params[:genre_ids].include?(genre.id.to_s) : false %>
                </td>
                <td>
                  <%= label_tag genre.id, genre.name %>
                </td>          
              </tr>
            <% end %>
          </tbody>
        </table>

      タグ検索
        <table class="table">
          <tbody>
            <% Tag.all.each do |tag| %>
              <tr>
                <td>
                  <%= check_box_tag "tag_ids[]", tag.id, params[:tag_ids].present? ? params[:tag_ids].include?(tag.id.to_s) : false %>
                </td>
                <td>
                  <%= label_tag tag.id, tag.name %>
                </td>          
              </tr>
            <% end %>
          </tbody>
        </table>
      <%= submit_tag "Search" %>
      <% end %>      
    </div>
  </div>
</div>



