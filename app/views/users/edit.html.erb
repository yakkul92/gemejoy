<div class='container'>
  <div class='row'>
    <div class="col-md-8 px-0 mx-auto">
        <h3 class="mb-0">会員情報編集</h3>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-8 bg-white p-5 mx-auto rounded-lg">
      <%= form_with model: @user, url: user_path(current_user), method: :patch do |f| %>
      <div>
        <table>
          <tr>
            <td>
              <%= f.label :"ユーザー名" %><%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </td>
          </tr>

          <tr>
            <td><%= f.label :"メールアドレス" %><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

            <td><%= f.submit "編集内容を保存", class:"btn btn-success mt-3 mr-5" %>
            <%= link_to "退会する", users_unsubscribe_path(@user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger mt-3" %>
          </tr>
        </table>
      </div>
      <% end %>
    </div>
  </div>
</div>