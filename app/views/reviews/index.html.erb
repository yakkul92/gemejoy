<div class="container-fluid mt-4">
  <div class="row">
    <div class="col px-5">
      <h4>レビュー一覧</h4>
      <p>
        <%= link_to '新しい順', reviews_path(latest: "true") %>
        |<%= link_to '古い順', reviews_path(old: "true") %>
        |<%= link_to '評価の高い順', reviews_path(star_count: "true") %>
        |<%= link_to 'いいねの多い順', reviews_path(favorite_reviews_count: "true") %>
      </p>
      
      <%= form_with(url: reviews_path, method: :get, class: "form-inline") do %>
        <div class="form-group">
          <%= text_field_tag(:search_word, params[:search_word], class: "form-control", placeholder: "キーワードで検索") %>
        </div>
        <%= submit_tag("検索", class: "btn btn-primary ml-2") %>
      <% end %>

      <%= render 'reviews/review_index', reviews: @reviews %>
      
    </div>
  </div>
</div>


