<% if review.favorited_review_by?(current_user) %>
  <%= link_to review_favorite_reviews_path(review), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= review.favorite_reviews.count %> このレビューいいね！
  <% end %>
<% else %>
  <%= link_to review_favorite_reviews_path(review), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= review.favorite_reviews.count %> このレビューいいね！
  <% end %>
<% end %>